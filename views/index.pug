extends layout

block content
  h1 Bookmark
  #map
  script.
    var positions = [];
  for result in results
    script.
      positions.push({
        lat: #{result.location[1]},
        lng: #{result.location[0]},
        name: '#{result.name}',
        id: '#{result.placeId}'
      });
  script.
    function initMap() {
      var center = positions[0] || { lat: 34.052235, lng: -118.243683 };
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 13,
        center: center
      });
      positions.forEach(function (pos) {
        new google.maps.Marker({
          position: { lat: pos.lat, lng: pos.lng },
          map: map,
          title: pos.name
        });
      });
    }
  script(
    async
    defer
    src="https://maps.googleapis.com/maps/api/js"
          + "?key=AIzaSyDstGWb78hgfNDXvuGydDyE8hXCLLfj3n4&callback=initMap"
  )